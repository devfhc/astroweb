---
import {Picture} from "astro:assets";
import PrimaryLayout from "../../layouts/PrimaryLayout.astro";
import Footer from "../../components/Footer.astro";

const metaTitle = "Services Provided By Friendly Home Care";
const metaDescription="";
const metaKeywords ="";
const canonicalUrl = "https://chicagoeuropeancaregivers.com/services";

import image1 from "../images/friendly-home-care-09.jpg";
import image2 from "../images/friendly-home-care-16.jpg";
import image3 from "../images/friendly-home-care-14.jpg";
import image4 from "../images/friendly-home-care-17.jpg";
---

<PrimaryLayout metaTitle={metaTitle} metaDescription={metaDescription} metaKeywords={metaKeywords} canonicalUrl={canonicalUrl}>
	<div class="container-fluid bg-white">
    <div class="container p-0">
      <section class="row align-items-center pb-5">
        <div class="col-12 col-lg-8 offset-lg-2 py-5">
          <h1 class="fw-bold ff-slab uppercase text-center text-primary m-0">
            Services Provided<br />By Friendly Home Care
          </h1>
        </div>
        <div class="col-12 col-md-6 col-xl-4">
          <a href="/services/in-home-care" class="card card-body p-3 p-md-4 card-article mb-4">
            <Picture src={image1} 
                      formats={['avif', 'webp']} 
                      quality={70}
                      width={382}
                      height={256}
                      alt="Female caregiver taking care of a person in wheelchair" />
            <h3 class="card-title mt-3 mb-0">PERSONAL &amp; TRUSTED IN-HOME CARE SERVICES</h4>
          </a>
        </div>
        <div class="col-12 col-md-6 col-xl-4">
          <a href="/services/companion-care" class="card card-body p-3 p-md-4 card-article mb-4">
            <Picture src={image2} 
                      formats={['avif', 'webp']} 
                      quality={70}
                      width={382}
                      height={256}
                      alt="Male caregiver taking elderly person in wheelchair" />
            <h3 class="card-title mt-3 mb-0">SENIOR COMPANION CARE SERVICES</h4>
          </a>
        </div>
        <div class="col-12 col-md-6 col-xl-4">
          <a href="/services/personal-care" class="card card-body p-3 p-md-4 card-article mb-4">
            <Picture src={image3} 
                      formats={['avif', 'webp']} 
                      quality={70}
                      width={382}
                      height={256}
                      alt="Caregiver combing elderly patient's hair" />
            <h3 class="card-title mt-3 mb-0">PERSONAL CARE SOLUTIONS FOR SENIORS</h4>
          </a>
        </div>
        <div class="col-12 col-md-6 col-xl-4">
          <a href="/services/live-in-and-overnight-care" class="card card-body p-3 p-md-4 card-article mb-4">
            <Picture src={image4} 
                      formats={['avif', 'webp']} 
                      quality={70}
                      width={382}
                      height={256}
                      alt="Female caregiver hugging elderly women" />
            <h3 class="card-title mt-3 mb-0">LIVE-IN AND OVERNIGHT HOME CARE SERVICES</h4>
          </a>
        </div>
      </section>
    </div>
  </div>
  <Footer />
</PrimaryLayout>