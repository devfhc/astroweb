---
import { config } from '../config';
import '../styles/global.css';

export interface Props{
  title: string;
  description: string;
  keywords: string;
  canonicalURL: string;
  ldJson?: string;
  image?: string
}

const {title, description, keywords, canonicalURL, ldJson='', image =''} = Astro.props;
---

<title>{title}</title>
<head>
  <meta charset="utf-8" />
  <Fragment set:html={config.blockSearchEngines && `<meta name="robots" content="noindex, nofollow" />`} />  
  <link rel="canonical" href={canonicalURL} />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<meta name="generator" content={Astro.generator} />
  <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
  <title>{title}</title>
  <meta name="keywords" content={keywords} />
  <meta name="description" content={description} />
  <meta name="twitter:card" content="summary" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content="https://chicagoeuropeancaregivers.com/images/friendly-home-care-22.jpg" />
  <meta name="twitter:site" content="" />
  <meta property="og:description" content={description} />
  <meta property="og:title" content={title} />
  <meta property="og:type" content="website" />
  <meta property="og:image" content="https://chicagoeuropeancaregivers.com/images/friendly-home-care-22.jpg" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@700&family=Roboto:ital,wght@0,400;0,700;1,400&display=swap"
    rel="stylesheet"
  />
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
    crossorigin="anonymous"
  />
  <Fragment set:html={ldJson} />
  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-Q0E4W771HT"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-Q0E4W771HT');
  </script>
</head>